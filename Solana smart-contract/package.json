{
  "name": "lottery-program",
  "version": "1.0.0",
  "description": "Multi-token lottery program on Solana with BTC-denominated pricing",
  "main": "index.js",
  "scripts": {
    "build": "anchor build",
    "clean": "anchor clean",
    "deploy": "anchor deploy",
    "deploy:devnet": "anchor deploy --provider.cluster devnet",
    "deploy:mainnet": "anchor deploy --provider.cluster mainnet-beta",
    "test": "anchor test",
    "test:unit": "anchor test tests/lottery.ts",
    "test:integration": "anchor test tests/integration.ts",
    "test:performance": "anchor test tests/performance.ts",
    "start-validator": "solana-test-validator --reset",
    "stop-validator": "pkill -f solana-test-validator",
    "keys": "anchor keys list",
    "keys:sync": "anchor keys sync",
    "idl:build": "anchor idl build",
    "idl:deploy": "anchor idl deploy",
    "verify": "anchor verify",
    "upgrade": "anchor upgrade",
    "localnet": "solana config set --url localhost",
    "devnet": "solana config set --url devnet", 
    "mainnet": "solana config set --url mainnet-beta",
    "airdrop": "solana airdrop 2",
    "balance": "solana balance",
    "logs": "solana logs",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "precommit": "lint-staged",
    "docs": "typedoc --out docs src/",
    "coverage": "nyc anchor test"
  },
  "keywords": [
    "solana",
    "anchor",
    "lottery",
    "blockchain",
    "defi",
    "rust",
    "cryptocurrency",
    "spl-token",
    "switchboard",
    "vrf"
  ],
  "author": {
    "name": "Lottery Team",
    "email": "dev@lottery.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lottery-team/lottery-program.git"
  },
  "bugs": {
    "url": "https://github.com/lottery-team/lottery-program/issues"
  },
  "homepage": "https://lottery.com",
  "dependencies": {
    "@coral-xyz/anchor": "^0.30.1",
    "@solana/web3.js": "^1.95.0",
    "@solana/spl-token": "^0.4.8",
    "@switchboard-xyz/on-demand": "^1.1.0",
    "@pythnetwork/client": "^2.19.0",
    "@clockwork-xyz/sdk": "^2.0.27",
    "bn.js": "^5.2.1",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^10.3.0",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2",
    "typedoc": "^0.25.8",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "resolutions": {
    "@solana/web3.js": "^1.95.0"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts",
      "tests/**/*",
      "coverage/**/*"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "all": true
  },
  "config": {
    "solana": {
      "cluster": "devnet",
      "wallet": "~/.config/solana/id.json"
    },
    "anchor": {
      "version": "0.30.1"
    }
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/lottery-program"
  }
}